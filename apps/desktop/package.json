{
  "name": "@drasill/desktop",
  "version": "1.0.0",
  "private": true,
  "description": "Drasill Cloud Desktop App",
  "author": "Drasill AI LLC",
  "main": "dist/main/index.js",
  "scripts": {
    "dev": "concurrently -k \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "wait-on tcp:5173 && npm run build:main && npm run build:preload && electron .",
    "build": "npm run build:main && npm run build:preload && npm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:preload": "tsc -p tsconfig.preload.json",
    "build:renderer": "vite build",
    "package": "npm run build && electron-builder",
    "package:win": "npm run build && electron-builder --win",
    "package:mac": "npm run build && electron-builder --mac",
    "typecheck": "tsc --noEmit -p tsconfig.main.json && tsc --noEmit -p tsconfig.preload.json && tsc --noEmit -p tsconfig.renderer.json"
  },
  "dependencies": {
    "@drasill/shared": "*",
    "electron-store": "^8.2.0",
    "mammoth": "^1.11.0",
    "openai": "^4.104.0",
    "vectra": "^0.11.1"
  },
  "devDependencies": {
    "@monaco-editor/react": "^4.6.0",
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "29.4.6",
    "electron-builder": "^24.13.0",
    "monaco-editor": "^0.47.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.4.0",
    "vite": "^5.1.0",
    "wait-on": "^7.2.0",
    "zustand": "^4.5.0"
  },
  "build": {
    "appId": "com.drasill.cloud",
    "productName": "Drasill Cloud",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns",
      "category": "public.app-category.developer-tools"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  }
}
